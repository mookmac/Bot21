{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Phenomenon Creations Ltd.",
        "websiteUrl": "https://www.PhenomenonCreations.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Bot21-${{TEAMSFX_ENV}}",
        "full": "Bot21 - a 1-2-1 meeting assistant"
    },
    "description": {
        "short": "short description for AlexTestBot1",
        "full": "full description for AlexTestBot1"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal",
                        "team",
                        "groupchat"
                    ],
                    "commands": [
                        {
                            "title": "welcome",
                            "description": "Have Bot21 re-introduce itself"
                        },
                        {
                            "title": "learn",
                            "description": "Learn about what you can do with Bot21"
                        },
                        {
                            "title": "add objective",
                            "description": "Add an objective for a new or existing employee"
                        },
                        {
                            "title": "list employees",
                            "description": "List all of your employees and their objectives"
                        }
                    ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}